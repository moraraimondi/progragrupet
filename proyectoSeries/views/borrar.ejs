<!--Include del header-->
<%-include('./partials/header.ejs') %>
<!--Include del header-->
<body>


    <div class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade" uk-height-viewport>
        <div class="uk-width-1-1">
            <div class="uk-container">
                <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
                    <div class="uk-width-1-1@m">
                        <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
                            <h3 class="uk-card-title uk-text-center">Logueate para borrar tu review</h3>
                            <form action="/series/borrar" method="POST">
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <input class="uk-input uk-form-large" placeholder= "Email" type="text" name="email">
                                        <input type="hidden" name="idreviews" value="<%=idreviews%>">
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <input class="uk-input uk-form-large" placeholder="Password" type="password" name="password">	
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <button class="uk-button uk-button-danger uk-button-large uk-width-1-1">BORRAR</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>