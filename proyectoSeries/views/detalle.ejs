<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Nerfli</title>

    <link rel="stylesheet" href="/stylesheets/buttonHeader.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/detalle.css">
    <link rel="stylesheet" href="/stylesheets/uikit.min.css">

    <script src="/javascripts/uikit-icons.min.js" ></script>
    <script src="/javascripts/uikit.min.js" ></script>
    <script src="/javascripts/detalle.js" ></script>
  </head>
   <!--Include del header-->
   <%-include('./partials/header.ejs') %>
   <!--Include del header-->
  <body>
      <main>

      <div class="uk-section">
        <div class="uk-container">
          <div class="uk-grid">
            <div class="uk-width-1-3 imagenSerie">

            </div>
            <div class="uk-width-2-3 dataSerie">

            </div>
          </div>

          <div class="uk-section">
            <div class="seasons">
              <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider>

                <ul class="listaTemporadas uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m">
                    <!-- <li>
                        <img src="images/slider1.jpg" alt="">
                        <div class="uk-position-center uk-panel"><h1>1</h1></div>
                    </li> -->
                </ul>

                <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>

            </div>
            </div>
          </div>
        </div>
      </div>
      <div class="padre">
        <div class="chico">
           <h2 class="resenias">COMENTARIOS</h2>  
        </div>
        <ul class="uk-comment-list">
            <ul>
              <% for(i = 0; i < reviews.length; i++){ %>
                <li>
                  <div class="hijo">
                    <article class="uk-comment uk-comment-primary uk-visible-toggle" tabindex="-1">
                        <header class="uk-comment-header uk-position-relative">
                            <div class="uk-grid-medium uk-flex-middle" uk-grid>
                                <div class="uk-width-auto">
                                  <img src="/images/avatar.png" width="80" height="80" alt="">
                                </div>
                                <div class="uk-width-expand">
                                    <h4 class="uk-comment-title uk-margin-remove"><a class="uk-link-reset" href="/series/resultadoUsuarios?searchUser=<%=reviews[i].id_usuarios%>"><%=reviews[i].usuarios.usuario%></a></h4>
                                    <p class="uk-comment-meta uk-margin-remove-top"><a class="uk-link-reset" href="#"><%=reviews[i].createdAt%></a></p>
                                </div>
                            </div>
                           <!-- <div class="uk-position-top-right uk-position-small uk-hidden-hover"><a class="uk-link-muted" href="/series/login">Lleva al login</a></div> -->
                        </header>
                        <div class="uk-comment-body">
                            <p><%=reviews[i].texto%></p>
                        </div>
                    </article>
                    <br>
                  </div>
                </li>
              <%}%>
            </ul>
          </ul>
        </div>
<div class="form">
  <div class="mini">
    <%if(usuarioLogeado){%>

      <form action="/series/detalle" method="POST">
        <h2 class="resenia">Dejá tu reseña</h2>
        <input type="hidden" name="id_serie" value="<%=id_serie%>">
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <input class="uk-input uk-form-large" placeholder="Comment" type="text" name="comment">	
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <input class="uk-input uk-form-large" list ="score" placeholder= "Score" type="text" name="score">
                <datalist id="score">
                  <option value="1">
                  <option value="2">
                  <option value="3">
                  <option value="4">
                  <option value="5">
                </datalist>
            </div>
        </div>
        <div class="uk-margin">
            <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">SUBMIT</button>
        </div>
    </form>
    <%}else{%>
      <a href="/series/misResenias">Logueate para dejar tu propia resenia</a>
    <%}%>
</div>
</div>



      <br>
      <br>
      <br>
    </main>

  </body>
</html>
